datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
  
}

model User {
  id String          @id @default(uuid())
  fullName String?
  email String @unique
  password String
  UserOnStore UserOnStore[]
  Stores Store[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id String          @id @default(uuid())
  UserOnStore UserOnStore[]
  User User @relation(fields: [ownerId], references: [id])
  ownerId String
  storeName String
  zipCode String
  country String
  state String
  city String
  address String
  number Int
  complement String?
  plan String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserOnStore {
  @@id([userId, storeId])
  role String
  user User @relation(fields: [userId], references: [id])
  userId String
  store Store @relation(fields: [storeId], references: [id])
  storeId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}